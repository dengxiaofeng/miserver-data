{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
